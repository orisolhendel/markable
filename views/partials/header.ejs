        <div class="hideForMobile captionText" onclick="location.href = 'javascript:void(0)'" >
            <a class="captionText">About</a>
        </div>
        <div class="hideForMobile captionText" onclick="location.href = 'javascript:void(0)'">
            <a class="captionText">Technology</a>
        </div>
        <div class="hideForMobile captionText" onclick="location.href = 'javascript:void(0)'">
            <a class="captionText">FAQ</a>
        </div>
        <div class="hideForMobile captionText" onclick="location.href = 'javascript:void(0)'">
            <a class="captionText">Treatment Options</a>
        </div>
