
<style>
  @import url('https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Lora&family=Merriweather:wght@300&family=Quattrocento&display=swap');
</style>

  
<style>

body {
    overflow-x: hidden;
    touch-action: pan-y;
    -ms-touch-action: pan-y;
    width:100%;
}

body  > * {
  font-weight: 300;
  letter-spacing: 0.9pt;
  color: #4A4A4A;
}

button {
            font-family: 'Lato', sans-serif;
            font-size: 18px;
            color: #ffffff;
            border: none;
            border-radius: 8px;
            background: #ff0083;
            cursor: pointer;
            text-align: center;
            font-weight: bold;
}

button:hover {
    background-color:#db0272;
}

button.selfieButton {
    width: 160px;
    height: 38px;;
    background-color: #ffffff;
    color:#ff0083;
    border: 1px solid #ff0083;
}

button.selfieButton:hover {
    color:#db0272;
    border: 1px solid #db0272;
}

a { 
    font-family: 'Lato', sans-serif;
    font-size: 24px;
    color: #ff0083;
    text-decoration: none;
    cursor: pointer;
}

a:hover {
    text-decoration: underline;
}

.captionText {
    font-family: 'Merriweather', serif; 
    font-size:18px;
    padding: 10px;
    color:#777777;
    display: inline;
    padding-right: 20px;
}

.abs {
    position: absolute;
}

.fxd {
    position: fixed;
}

.hand {
    cursor: pointer;
}

.flex {
    display: flex;
}

@media only screen and (max-width: 1000px) {
  div.hideForMobile {
    visibility: hidden;
  }

  div.captionLayout {
    height: 58px;
  }

  div.subCaptionLayout {
    padding: 0px;
  }

  div.logoLayout {
    padding: 0px;
  }

  div.logoLayout {
    top: 7px;
    left: 10px;
  }
}

@media only screen and (min-width: 1000px) {
  div.onlyForMobile {
    display: none;
  }

  div.captionLayout {
    height: 100px;
  }

  div.subCaptionLayout {
    padding: 25px;
  }

  div.logoLayout {
    top: 30px;
    left: 95px;
  }
}
</style>

<script src="./scripts/utils.js"></script>
<script src="./scripts/mark_hamburgers.js"></script>

